<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nocolor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_app_main</item>
        <item name="android:windowContentOverlay">@null</item>
    <!--    <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>-->

        <!--activity的背景色-->
        <item name="android:windowBackground">@color/color_default_background</item>

<!--        <item name="editTextStyle">@style/AppEditTextStyle</item>-->

    </style>








    <!--导航tab-->

    <style name="style_tab_layout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/size_title_sp_12</item>
        <item name="android:textColor">@color/color_text_99</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!--导航tab-->

    <style name="style_tab_layout2" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/size_title_sp_12</item>
        <item name="android:textColor">@color/color_text_66</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>


    <style name="hintAppearence" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/size_content_sp_14</item>
        <item name="android:textColor">@color/color_app_main</item>
    </style>


    <style name="ToolbarPopupTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle
        </item> <!--新增一个item，用于控制menu-->
    </style>


    <!--溢出[弹出]菜单样式 parent相当于继承【可以不要parent】-->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_content_sp_12</item>
    </style>


    <!-- 设置Toolbar标题字体的颜色大小 -->
    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textSize">@dimen/size_content_sp_12</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>






    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/button_normal</item>
        <item name="colorControlActivated">@color/button_click</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--poput动画-->
    <style name="Popup_Anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>


</resources>
