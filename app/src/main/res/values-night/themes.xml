<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ttech" parent="Theme.AppCompat.Light.NoActionBar">
        <!--标题栏-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏-->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <!--系统控件：复选框、单选控件选中颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--activity的背景色-->
        <item name="android:windowBackground">@color/color_default_background</item>
        <!--窗体无标题栏-->
        <item name="windowNoTitle">true</item>
        <!--无actionbar-->
        <item name="windowActionBar">false</item>
        <item name="android:overScrollMode">never</item>

        <!--控件的基本属性配置-->
        <item name="android:textViewStyle">@style/AppTextViewStyle</item>
        <item name="editTextStyle">@style/AppEditTextStyle</item>
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>

        <!--解决按钮不显示的问题-->
        <item name="android:datePickerDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:timePickerDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>
</resources>